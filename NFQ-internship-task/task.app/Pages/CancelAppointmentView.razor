@page "/cancel"
<h3>Cancel appointment</h3>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="form-group">
            <label>Reservation code:</label>
            <input class="form-control" @bind="@_reservationCode" />
            @if (_wrongCode)
            {
                <label class="alert-warning">Bad reservation code</label>
            }
        </div>
        <div class="form-group">
            <button class="btn btn-success" @onclick="@(async () => await Cancel(_reservationCode))">Cancel</button>
        </div>
    </div>
</div>
