@page "/check"
<h3>Check how much time left before appointment starts</h3>

<div class="row">
    <div class="col-md-6 offset-md-3">
        @if (showTime)
        {
            <h3>@(_timeLeft.Days)d. @(_timeLeft.Hours)h @(_timeLeft.Minutes)m and @(_timeLeft.Seconds)s left until appointment starts</h3>
        }
        <div class="form-group">
            <label>Reservation code:</label>
            <input class="form-control" @bind="@_reservationCode"/>
            @if (_wrongCode)
            {
                <label class="alert-warning">Bad reservation code</label>
            }
        </div>
        <div class="form-group">
            <button class="btn btn-success" @onclick="@(async () => await Check(_reservationCode))">Check</button>
        </div>
    </div>
</div>